// Based upon this tutorial on Responsive Web Design:
// http://webdesignerwall.com/tutorials/responsive-design-with-css3-media-queries

// Inspired by http://darkeffector.tumblr.com

@import url('http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700')

$bgColor        = #3D4349
$textColor      = #EFEFEF
$mainColor      = #d94

$colSpacing     = 20px
$containerWidth = 1080px
$sidebarWidth   = 120px
$contentWidth   = 800px

$headerFont     = 700 2.8em 'Open Sans Condensed', sans-serif
$metaFont       = 700 1.2em 'Open Sans Condensed', sans-serif
$bragFont       = 700 1.3em 'Open Sans Condensed', sans-serif
$navFont        = 1.8em \/ 1.5 'Open Sans Condensed', sans-serif
$bodyFont       = Helvetica, Arial, sans-serif
$titleFont      = 1.2em \/ 2.5 'Open Sans Condensed', sans-serif

.white-bg
  text-shadow none
  color #333
  background white
  box-shadow 0 0 0 4px rgba(0, 0, 0, 0.03) inset, 0 0 0 1px rgba(0, 0, 0, 0.15)
  position relative
  padding 5px 32px 32px 32px
  border-radius 0 0 10px 10px

*
  box-sizing: border-box;

fix-float()
  height auto
  overflow hidden

html
  min-height 100%
  overflow-y auto

body
  font-family $bodyFont
  background $bgColor
  color $textColor
  text-shadow 0px 1px #333

a
  text-decoration none
  color inherit
  
  &:hover
    color $mainColor
  
#container
  fix-float()
  width $containerWidth
  padding-left $colSpacing
  margin-bottom 50px
  
#header
  height 100px
  margin-left $sidebarWidth + $colSpacing
  h1
    font $headerFont
    margin 0
    letter-spacing 1px
    text-shadow 4px 4px 11px #222
  a:hover
    color inherit

#content
  width $contentWidth
  margin-left $colSpacing
  float left
  h2, h3
    font-family 'Open Sans Condensed', sans-serif
    font-weight 400
  h2
    font-size 1.6em
  h3
    margin-bottom 0.5em
  p
    margin-top 0
    line-height 1.5
  a
    color $mainColor
    &:hover
      color darken( $mainColor, 30% )

#sidebar
  width $sidebarWidth
  float left
  margin-top 80px

#menu
  list-style none
  padding 0
  margin 0
  li
    font $navFont
    a
      display block

#content .posts-list
  .brag
    font $bragFont
    h1
      font-size 2.1em
    .mugshot
      width 240px
      height 240px
      margin-right 1.5em
    margin-bottom 35px

  .post
    fix-float()
    position relative
    line-height 2
    border-top 1px solid #ccc
    h2
      font $titleFont
      margin 0
      a
        color inherit
        display block
    time
      position absolute
      top 0
      right 0
      color #999
      font $titleFont
      pointer-events none
    &:hover
      a
        color darken($mainColor, 30%)
      time
        color darken($mainColor, 30%)

.hr
  display none

.post-single
  padding 10px 0 25px 0
  header
    h1
      font-size 2.6em
      font-weight 400
      position relative
      margin-bottom 5px
      font $headerFont
      a
        color inherit !important
    .meta
      padding-right 32px
      font $metaFont
      display block
      color #909090
      time
        color #9B9 
      .tags
        a
          color #d94 !important
          &:hover
            color darken($mainColor, 30%) !important
    
  header, .content, footer
      margin 0 32px
  
  .content
    margin-top 50px
    line-height 1.6
    h1, h2
      font-size 1.6em
    h3
      font-size 1.4em
    h1, h2, h3
      color #333
      font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
      font-weight 400
      margin 1em 0 0 0
    h3 + p, h2 + p, h3 + p
      margin-top 0.5em
    code
      font-size 0.9em
      font-family Monaco, Droid Sans, Inconsolata, monospace
      border-left 2px solid #DDD
      display inline-block
      padding-left 10px
    blockquote
      margin 0
      border-left 2px solid #DDD
      display block
      padding-left 10px
    ul, ol
      padding-left 20px
      li
        margin-bottom 10px
  
  footer
    color #777
    border-top 2px solid #DDD
    padding-top 15px
    margin-top 30px
  
  .content, footer
    a
      color darken($mainColor,20%)
      &:hover
        color darken($mainColor,50%)
  
  .shadow
    background url(/img/post_shadow.png) left bottom no-repeat
    width 100%
    height 10px
    display block
    position absolute
    left 0
    bottom -10px
    z-index 2

.pagination
  margin-top 2em
  .next
    float right
  a
    color #999 !important
    &:hover
      color white !important

.mugshot
    float left
    margin-right 15px
    border-radius 6px
    width 120px
    height 120px

@media only screen and (max-width: 1023px)
  
  #container
    width auto
    margin 0
    padding 0
  
  #sidebar, #content
    float none
    width auto
    margin-top 10px
  
  #header
    margin-left 0
    h1
      font-size 34px
      line-height 1.2
      span
        display block
        height 0
        visibility hidden
  
  #menu
    fix-float()
    width auto
    margin-left 1.3em
    li
      font-size 1.4em
      display inline-block
      margin-left 0.4em
  
  .hr
    display block
    text-align center
    margin-bottom 20px
    
  #content
    .brag
      .mugshot
        width 120px
        height 120px
        margin-right 1.5em

    margin-left 0
    .posts-list
      .post
        margin-bottom 25px
        h2
          line-height 1.4
        time
          display none
    
    .post-single
      padding 1px 0 20px 0 !important
      header, .content, footer
        margin 0 15px
      header
        h1
          font-size 1.4em
        .meta
          text-align left
          padding 0
      .content
        h1, h2, h3
          font-size 1.2em
        blockquote, code
          padding-left 5px
  
